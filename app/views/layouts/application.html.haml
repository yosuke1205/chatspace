!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ChatSpace
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    %link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css")
    %link(rel="stylesheets" href="_reset.scss")

  %body
    .chat-side
      .chat-side__header
        .chat-side__header__box
          %p.chat-side__header__box_name
            yousuke
          %ul.chat-side__header__box__menu
            %li.chat-side__header__box__menu__edit-user
              %i.fa.fa-edit
            %li.chat-side__header__box__menu__new__group
              %i.fa.fa-cog
      .groups
        .groups__group
          %p.groups__group__name
            div
          %p.groups__group__message
            おはよう！
    .chat-main
      .main__header
        .main__header__btn
          Edit
        .main__header__leftbox
          %h2.main__header__leftbox__group-name
            div
          %ul.main__header__leftbox__member__list
            Member:
            %li.main__header__leftbox__member__list_name
              yousuke,yuta,shogo
      .chat-message
        .chat-message__upper-info
          %p.chat-message__upper-info__talker
            yousuke
          %p.chat-message__upper-info__date
            2019/02/25(Mon)11:05:02
        %p.chat-message__text
          おはよう！
      .form
        .form__new__message
          .form__new__message__input__box
            %input{placeholder: 'type a message', class: 'form__new__message__input__box_text'}
            %label.form__new__message__input__box__image
              %i.fa.fa-image
          %input{type: 'submit', value: "Send",class: 'form__new__message__submit_btn'}
    = yield


